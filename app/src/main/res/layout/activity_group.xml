<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        tools:context=".activities.GroupActivity">
        <FrameLayout
            android:id="@+id/group_photos_frame"
            android:transitionName="transition"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_height="@dimen/_165sdp">



            <ImageView

                android:id="@+id/group_back_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@color/grey"
                android:scaleType="centerCrop"
                android:background="@drawable/user_profile_background"
                >
            </ImageView>
            <TextView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/open_sans"
                android:layout_gravity="end"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="italic"
                app:drawableEndCompat="@drawable/ic_baseline_search_24">

            </TextView>
            <com.makeramen.roundedimageview.RoundedImageView
                android:elevation="@dimen/_10sdp"
                android:outlineSpotShadowColor="@color/black"
                android:id="@+id/group_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center_horizontal|start"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:src="@color/cardview"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/_60sdp">
            </com.makeramen.roundedimageview.RoundedImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_55sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/group_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_18sdp"
                        android:text="GroupName"
                        android:fontFamily="@font/ubuntu_regular"
                        android:textColor="@color/black"


                        >
                    </TextView>
                    <TextView
                        android:id="@+id/group_edit_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" "
                        android:layout_marginStart="@dimen/_5sdp"
                        app:drawableEndCompat="@drawable/edit_icon">

                    </TextView>

                </LinearLayout>
                <TextView
                    android:id="@+id/group_nousers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="98.4k"
                    android:textSize="@dimen/_13sdp">

                </TextView>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/group_rating"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_15sdp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true">

                    </com.airbnb.lottie.LottieAnimationView>



            </LinearLayout>


        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_about_us"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="About this group">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_description"
            android:textSize="@dimen/_14sdp"
            android:textColor="#8A8C8E"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="This some dummy text for test purposes for the development of the app ">

        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_topic"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="This group discusses">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_actual_topic"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/gold"
                android:fontFamily="@font/ubuntu_bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Football">

            </TextView>
        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:id="@+id/group_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/shadow_x_y_stroke_4_black"
            android:backgroundTint="@color/cardview"
            android:outlineSpotShadowColor="@color/black"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp"
            app:strokeColor="#AFB1B3"
            app:strokeWidth="@dimen/_1sdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/group_post_user_image"
                    android:layout_width="@dimen/_40sdp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:riv_corner_radius="@dimen/_60sdp"
                    android:background="@drawable/rounded_img"
                    android:layout_height="@dimen/_40sdp">

                </com.makeramen.roundedimageview.RoundedImageView>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/group_post_text"
                        android:layout_width="@dimen/_230sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/post_edittext"
                        android:paddingStart="@dimen/_20sdp"
                        android:gravity="center|start"
                        android:textSize="@dimen/_14sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="What's on your mind ?"
                        android:layout_height="@dimen/_50sdp">
                    </TextView>


                </FrameLayout>
            </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:id="@+id/my_posts_in_this_group"
                    android:background="@drawable/button_home_recycler"
                    android:text="Check out all your posts in this group"
                    android:fontFamily="@font/ubuntu_regular"
                    android:textSize="@dimen/_13sdp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:backgroundTint="#DDDCDC"
                    android:layout_height="@dimen/_40sdp">

                </androidx.appcompat.widget.AppCompatButton>


            </LinearLayout>





        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/group_members"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_20sdp"
            android:scrollbars="none"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_home_recycler"
                android:backgroundTint="@color/gold"
                android:id="@+id/group_posts"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:fontFamily="@font/ubuntu_regular"
                android:text="See Posts">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_home_recycler"
                android:backgroundTint="@color/gold"
                android:id="@+id/group_conversation"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="false"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/black"
                android:text="See Conversation">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
