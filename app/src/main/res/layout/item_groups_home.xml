<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_260sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/_30sdp"
    android:background="@color/beigewhite"
    android:elevation="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_height="@dimen/_280sdp">
    <LinearLayout
        android:layout_width="@dimen/_260sdp"
        android:orientation="vertical"
        android:background="#F4F2EC"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/group_img"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_60sdp">

        </com.makeramen.roundedimageview.RoundedImageView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/group_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/gold"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp">
        </androidx.appcompat.widget.AppCompatTextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:orientation="horizontal">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/rating"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_20sdp"
                app:lottie_loop="true"
                android:layout_marginTop="@dimen/_20sdp"
                app:lottie_autoPlay="true">

            </com.airbnb.lottie.LottieAnimationView>

            <FrameLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/join_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    app:cornerRadius="@dimen/_20sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Join"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textAllCaps="false"
                    android:background="@drawable/button_home_recycler">
                </androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/joined_txt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_baseline_add_task_24"
                    android:gravity="center"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="  joined"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="italic"
                    android:visibility="invisible">

                </androidx.appcompat.widget.AppCompatTextView>


            </FrameLayout>




        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>