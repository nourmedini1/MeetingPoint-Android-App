<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/_180sdp"
    android:orientation="vertical"

    android:layout_marginTop="@dimen/_5sdp"
    android:layout_gravity="center_horizontal"
    android:layout_width="@dimen/_310sdp">

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/shadow_x_y_stroke_4_black"
        android:backgroundTint="@color/cardview"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="@dimen/_5sdp"
        android:outlineSpotShadowColor="@color/black"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/_4sdp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/user_profile_my_groups_image"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="@dimen/_64sdp"
                android:scaleType="centerCrop"
                android:layout_marginStart="@dimen/_30sdp"
                app:riv_corner_radius="@dimen/_45sdp"
                android:src="@drawable/app_img"
                android:layout_marginTop="@dimen/_15sdp"
                >

            </com.makeramen.roundedimageview.RoundedImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_profile_my_groups_groupname"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/gold"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="GroupName"
                    >

                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/user_profile_my_groups_members"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/_12sdp"
                        android:textColor="#5F6063"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="35.4k"
                        >

                    </TextView>
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/user_profile_my_groups_rating"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        >

                    </com.airbnb.lottie.LottieAnimationView>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
            <TextView
                android:id="@+id/user_profile_my_groups_description"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/_12sdp"
                android:text="This is a description of the group not a long sentence a brief description"
                >

            </TextView>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>